<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fatec.tcc.findfm">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".Utils.FindFM"
        android:allowBackup="true"
        android:icon="@drawable/favicon2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/favicon2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".Views.Login"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Controller.Midia.NotificacaoReturnSlot"
            android:launchMode="singleTask"
            android:taskAffinity=""
            android:excludeFromRecents="true"/>
        <activity
            android:name=".Views.Feed_Fragment"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".Views.Registrar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".Views.RegistrarMusico"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".Views.RegistrarContratante" />
        <activity
            android:name=".Views.TelaPrincipal"
            android:label="@string/title_activity_home__page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.Perfil_Fragment"
            android:label="@string/title_activity_perfil_fragment"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".Views.RecuperarSenha" />
        <activity
            android:name=".Views.CriarPost"
            android:label="@string/title_activity_criar_post"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".Views.FullScreenVideoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_full_screen_video"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".Views.CriarTrabalho"
            android:label="@string/trabalhos"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".Views.AnunciosSugeridos_Fragment" />
        <activity android:name=".Views.SearchUsuario"></activity>
    </application>

</manifest>